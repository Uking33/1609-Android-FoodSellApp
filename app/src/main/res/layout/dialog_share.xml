<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="540px"
    android:background="@color/white"
    android:orientation="vertical" >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30px"
        android:textColor="@color/fortygray"
        android:layout_marginTop="47px"
        android:gravity="center"
        android:text="分享到"/>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="98px"
        android:layout_marginRight="98px"
        android:layout_marginTop="36px"
        android:layout_marginBottom="36px"
        android:collapseColumns="4">
        <TableRow>
            <ImageView
                android:id="@+id/share_btn1"
                android:layout_width="100px"
                android:layout_height="126px"
                android:src="@drawable/icon_share_1"/>
            <ImageView
                android:id="@+id/share_btn2"
                android:layout_width="100px"
                android:layout_height="126px"
                android:layout_marginLeft="41px"
                android:src="@drawable/icon_share_2"/>
            <ImageView
                android:id="@+id/share_btn3"
                android:layout_width="100px"
                android:layout_height="126px"
                android:layout_marginLeft="41px"
                android:src="@drawable/icon_share_3"/>
            <ImageView
                android:id="@+id/share_btn4"
                android:layout_width="100px"
                android:layout_height="126px"
                android:layout_marginLeft="41px"
                android:src="@drawable/icon_share_4"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="40px">
            <ImageView
                android:id="@+id/share_btn5"
                android:layout_width="100px"
                android:layout_height="126px"
                android:src="@drawable/icon_share_5"/>
            <ImageView
                android:id="@+id/share_btn6"
                android:layout_width="100px"
                android:layout_height="126px"
                android:layout_marginLeft="41px"
                android:src="@drawable/icon_share_6"/>
            <ImageView
                android:id="@+id/share_btn7"
                android:layout_width="100px"
                android:layout_height="126px"
                android:layout_marginLeft="41px"
                android:src="@drawable/icon_share_7"/>
        </TableRow>
    </TableLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="98px"
        android:layout_marginRight="98px"
        android:background="@color/nintygray"
        android:layout_height="1dp"/>
    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:textSize="30px"
        android:background="@null"
        android:layout_gravity="center"
        android:text="取消"
        android:textColor="#eeacad"/>
</LinearLayout>